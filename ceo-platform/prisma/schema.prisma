generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TwoFactorMethod {
  EMAIL
  APP
  SMS
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String?
  taxId         String?   @unique
  phone         String?   @unique
  fax           String?
  address       String?
  contactPerson String?
  points        Int       @default(0)
  role          UserRole  @default(MEMBER)
  loginAttempts Int       @default(0)
  lockedUntil   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  emailVerified Boolean   @default(false)
  lastLoginAt   DateTime?
  status        UserStatus @default(ACTIVE)
  twoFactorEnabled   Boolean             @default(false)
  twoFactorMethod    TwoFactorMethod?    @default(EMAIL)
  emailVerifications EmailVerification[]
  oauthAccounts      OAuthAccount[]
  cartItems     CartItem[]
  member        Member?
  orders        Order[]
  sessions      Session[]
  accounts      Account[]
  userLogs      UserLog[]          @relation("UserLogs")
  adminLogs     UserLog[]          @relation("AdminLogs")
  pointTransactions PointTransaction[]
  payments          Payment[]
  invoices          Invoice[]
  deviceTokens      DeviceToken[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Member {
  id             String    @id @default(cuid())
  userId         String    @unique
  points         Int       @default(0)
  totalSpent     Decimal   @default(0) @db.Decimal(10, 2)
  lastPurchaseAt DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("members")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Category {
  id        String     @id @default(cuid())
  name      String     @unique
  parentId  String?
  level     Int        @default(1)
  sortOrder Int        @default(0)
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  parent    Category?  @relation("CategoryTree", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryTree")
  products  Product[]

  @@map("categories")
}

model Firm {
  id        String    @id @default(cuid())
  name      String    @unique
  phone     String?
  address   String?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  products  Product[]

  @@map("firms")
}

model Product {
  id               String      @id @default(cuid())
  name             String      @unique
  subtitle         String?
  description      String?
  image            String?
  unit             String?
  spec             String?
  firmId           String?
  categoryId       String?
  isActive         Boolean     @default(true)
  isFeatured       Boolean     @default(false)
  startDate        DateTime?
  endDate          DateTime?
  totalSold        Int         @default(0)
  minGroupQty      Int         @default(1)
  sortOrder        Int         @default(0)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  cartItems        CartItem[]
  orderItems       OrderItem[]
  priceTiers       PriceTier[]
  category         Category?   @relation(fields: [categoryId], references: [id])
  firm             Firm?       @relation(fields: [firmId], references: [id])

  @@map("products")
}

model PriceTier {
  id        String  @id @default(cuid())
  productId String
  minQty    Int
  price     Decimal @db.Decimal(10, 2)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, minQty])
  @@map("price_tiers")
}

model CartItem {
  id        String   @id @default(cuid())
  userId    String
  productId String
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@map("cart_items")
}

model Order {
  id           String      @id @default(cuid())
  orderNo      String      @unique
  userId       String
  status       OrderStatus @default(PENDING)
  totalAmount  Decimal     @db.Decimal(10, 2)
  note         String?
  pointsEarned Int         @default(0)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  items        OrderItem[]
  user         User        @relation(fields: [userId], references: [id])
  payment      Payment?    // 付款資訊
  invoice      Invoice?    // 發票資訊
  shipping     Shipping?   // 物流資訊

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  unitPrice Decimal @db.Decimal(10, 2)
  subtotal  Decimal @db.Decimal(10, 2)
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("contact_messages")
}

model UserLog {
  id        String     @id @default(cuid())
  userId    String
  adminId   String
  action    UserAction
  oldValue  String?
  newValue  String?
  reason    String?
  metadata  Json?      // 額外元數據（如點數調整金額）
  createdAt DateTime  @default(now())
  
  user      User      @relation("UserLogs", fields: [userId], references: [id])
  admin     User      @relation("AdminLogs", fields: [adminId], references: [id])
  
  @@map("user_logs")
}

model PointTransaction {
  id          String                @id @default(cuid())
  userId      String
  amount      Int                   // 正數為增加，負數為減少
  balance     Int                   // 調整後餘額
  type        PointTransactionType
  reason      String?
  referenceId String?               // 關聯訂單ID或其他參考
  createdAt   DateTime              @default(now())
  
  user        User                  @relation(fields: [userId], references: [id])
  
  @@map("point_transactions")
}

model Faq {
  id        String   @id @default(cuid())
  question  String
  answer    String
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("faqs")
}

enum EmailVerificationPurpose {
  VERIFY_EMAIL
  RESET_PASSWORD
  CHANGE_EMAIL
  TWO_FACTOR_AUTH
}

model EmailVerification {
  id        String                   @id @default(cuid())
  email     String                   @unique
  token     String                   @unique
  expiresAt DateTime
  purpose   EmailVerificationPurpose @default(VERIFY_EMAIL)
  userId    String?
  createdAt DateTime                 @default(now())
  user      User?                    @relation(fields: [userId], references: [id])

  @@index([email])
  @@index([token])
  @@map("email_verifications")
}

model EmailVerificationAttempt {
  email     String   @id
  attempts  Int      @default(1)
  updatedAt DateTime @updatedAt

  @@index([updatedAt])
  @@map("email_verification_attempts")
}

model OAuthAccount {
  id                String    @id @default(cuid())
  provider          String
  providerId        String
  userId            String
  email             String
  name              String?
  picture           String?
  accessToken       String?
  refreshToken      String?
  expiresAt         DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  appleUserId       String?   @unique
  authorizationCode String?
  identityToken     String?
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@index([userId])
  @@index([provider, email])
  @@map("oauth_accounts")
}

model TempOAuth {
  id                String    @id @default(cuid())
  provider          String
  providerId        String
  email             String
  name              String
  picture           String?
  accessToken       String
  refreshToken      String?
  tokenExpiresAt    DateTime?
  data              String
  createdAt         DateTime  @default(now())
  expiresAt         DateTime  @default(now())
  appleUserId       String?
  authorizationCode String?
  identityToken     String?

  @@unique([provider, providerId])
  @@index([expiresAt])
  @@map("temp_oauth")
}

enum UserRole {
  MEMBER
  ADMIN
  SUPER_ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  COMPLETED
  CANCELLED
}

enum UserAction {
  STATUS_CHANGE    // 狀態變更
  POINTS_ADJUST    // 點數調整
  INFO_UPDATE      // 資訊更新
  ACCOUNT_LOCK     // 帳號鎖定
  ACCOUNT_UNLOCK   // 帳號解鎖
}

enum PointTransactionType {
  ORDER_EARNED     // 訂單獲得
  ORDER_REFUND     // 訂單退款
  MANUAL_ADJUST    // 手動調整
  SYSTEM_ADJUST    // 系統調整
}

// ============ Payment, Invoice, Shipping Enums ============
enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCESS
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentMethod {
  CREDIT_CARD
  ATM
  COD
  LINE_PAY
  JKO_PAY
  TAIWAN_PAY
}

enum InvoiceStatus {
  PENDING
  ISSUED
  CANCELLED
  VOIDED
}

enum InvoiceType {
  ELECTRONIC  // 電子發票
  RECEIPT     // 收據
}

enum ShippingStatus {
  PREPARING
  SHIPPED
  IN_TRANSIT
  DELIVERED
  FAILED
  RETURNED
}

enum ShippingMethod {
  HOME_DELIVERY     // 宅配
  CONVENIENCE_STORE // 超商取貨
  PICKUP           // 自取
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  type      String   @default("EMAIL_VERIFICATION")
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
  @@map("email_verification_tokens")
}

// ============ Payment, Invoice, Shipping Models ============
model Payment {
  id                  String        @id @default(cuid())
  orderId             String
  userId              String
  status              PaymentStatus @default(PENDING)
  paymentMethod       PaymentMethod
  gateway             String?       // 支付閘道名稱，如 "ECPAY", "NCCC", "LINEPAY"
  gatewayTransactionId String?      // 閘道交易編號
  amount              Decimal       @db.Decimal(10, 2)
  currency            String        @default("TWD")
  metadata            Json?         // 閘道回應資料
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  order               Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
  user                User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orderId])
  @@index([userId])
  @@index([status])
  @@index([gatewayTransactionId])
  @@map("payments")
}

model Invoice {
  id              String        @id @default(cuid())
  orderId         String
  userId          String
  invoiceNumber   String?       @unique // 發票號碼
  invoiceDate     DateTime?     // 開立日期
  type            InvoiceType   @default(ELECTRONIC)
  status          InvoiceStatus @default(PENDING)
  taxId           String?       // 統一編號
  buyerName       String?       // 買方名稱
  buyerAddress    String?       // 買方地址
  amount          Decimal       @db.Decimal(10, 2)
  taxAmount       Decimal       @db.Decimal(10, 2) @default(0)
  carrierType     String?       // 載具類型：手機條碼、自然人憑證等
  carrierId       String?       // 載具編號
  issuedAt        DateTime?     // 開立時間
  cancelledAt     DateTime?     // 作廢時間
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  order           Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orderId])
  @@index([userId])
  @@index([invoiceNumber])
  @@index([status])
  @@map("invoices")
}

model Shipping {
  id                  String          @id @default(cuid())
  orderId             String
  shippingMethod      ShippingMethod
  provider            String?         // 物流商：黑貓、新竹物流、7-11、全家等
  trackingNumber      String?
  status              ShippingStatus  @default(PREPARING)
  estimatedDelivery   DateTime?
  actualDelivery      DateTime?
  shippingAddress     String
  receiverName        String
  receiverPhone       String
  notes               String?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  order               Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@unique([orderId])
  @@index([trackingNumber])
  @@index([status])
  @@map("shippings")
}

enum DevicePlatform {
  IOS
  ANDROID
  WEB
}

model DeviceToken {
  id        String         @id @default(cuid())
  userId    String
  token     String         @unique
  platform  DevicePlatform
  deviceId  String?        // Optional device identifier
  isActive  Boolean        @default(true)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([platform])
  @@index([isActive])
  @@map("device_tokens")
}
